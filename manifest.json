{
  "name": "chrome-grunt-notifier",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "A way to recieve grunt notifications remotely inside chrome",
  //"homepage_url": "",
  "content_security_policy": "script-src 'self' https://cdn.firebase.com https://*.firebaseio.com; object-src 'self'",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "permissions": [
    "notifications",
    "alarms",
    "background"
  ],
  "browser_action": {
    "default_icon": "icons/icon48.png",
    "default_title": "browser action",
    "default_popup": "src/browser_action/browser_action.html"
  }
}
